<form method="POST" action="{{host}}/mturk/externalSubmit">
  <input type="hidden" name="assignmentId" value="{{assignmentId}}" />
  <input type="hidden" name="turkerId" value="{{workerId}}" />

  <label>
    <div>Was this task unclear, mispriced, or frustrating? If we could make it better, let us know! (optional)</div>
    <textarea rows="4" cols="80" name="task_comments"></textarea>
  </label>

  <button>Submit responses and finish task</button>
</form>
